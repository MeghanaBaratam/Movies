<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.meghana.movies">

    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />


    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainActivity"
            android:label="POSTS LOGIN"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name=".SignUpForm"
                   android:label="Signup"/>

        <activity android:name=".ListView"
                   android:label="Users"/>
        <activity android:name=".Post"
            android:label="Posts!!!"/>
        <activity android:name=".LikeActivity"
            android:label="Likes!!!"/>
        <activity android:name=".ComentActivity"
            android:label="Comments!!!"/>
        <activity android:name=".PopUp"
            android:label="ImagePost"/>
        <activity android:name=".EditComment"
            android:label="Edit"/>
    </application>

</manifest>
